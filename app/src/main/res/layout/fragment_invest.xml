<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.raito.p2pinvest.fragment.InvestFragment">
    <!--title-->
    <include layout="@layout/common_title" />
    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/vp_TabLayout"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/home_back_selected01"
        app:tabIndicatorColor="#ff0033"
        app:tabIndicatorHeight="0dp"

        app:tabSelectedTextColor="#fffad8"
        app:tabTextColor="#ffb6c6">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_invest"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
